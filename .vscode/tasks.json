{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "shell",
      "label": "configure",
      "detail": "Configures cmake for project.",
      "command": "cmake -B build -G Ninja",
      "problemMatcher": [],
    },
    {
      "type": "shell",
      "label": "clean",
      "detail": "Removes all build files.",
      "command": "ninja clean",
      "problemMatcher": [],
      "options": {
        "cwd": "${workspaceFolder}/build"
      }
    },
    {
      "type": "shell",
      "label": "build",
      "detail": "Builds project.",
      "command": "ninja",
      "problemMatcher": "$gcc",
      "options": {
        "cwd": "${workspaceFolder}/build"
      }
    },
    {
      "type": "shell",
      "label": "flash",
      "detail": "Flashes current build to dev board.",
      "command": "openocd -f dev/devboard/flash_config.cfg -c 'program build/TAL.elf verify reset exit'",
      "problemMatcher": "$gcc" 
    },
    {
      "type": "shell",
      "label": "build_flash",
      "detail": "Builds and flashes project to devboard.",
      "command": [
        "ninja",
        "openocd -f dev/devboard/flash_config.cfg -c 'program build/TAL.elf verify reset exit'",
      ],
      "problemMatcher": "$gcc",
    },
  ]
}